<%- include(partials + '/header') %>

<h1>О нашей школе</h1>

<section>
    <h2>Педагогический состав</h2>
    <ul class="teacher-list">
        <% teachers.forEach(t => { %>
            <li>
                <img src="<%= t.image_url %>" alt="портрет" />
                <strong><%= t.name %></strong><br/>
                <em><%= t.bio %></em>
            </li>
        <% }) %>
    </ul>
</section>

<section>
    <h2>Расписание работы</h2>
    <table class="schedule">
        <tr><th>День</th><th>Время</th></tr>
        <% weekSchedule.forEach(schedule => { %>
            <tr>
                <td><%= schedule.dayOfWeek %></td>
                <td><%= schedule.workingHours %></td>
            </tr>
        <% }) %>
    </table>
</section>

<section>
    <h2>Наши достижения</h2>
    <ul class="achievement-list">
        <% achievements.forEach(a => { %>
            <li><strong><%= a.date %></strong>: <%= a.title %> - <%= a.description %></li>
        <% }) %>
    </ul>
</section>

<%- include(partials + '/footer') %>
