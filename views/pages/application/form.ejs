<%- include(partials + '/header') %>

<main class="application-page">
    <h1 class="application-page__title">Подача заявки</h1>

    <% if (error) { %>
        <p class="application-page__error" role="alert"><%= error %></p>
    <% } %>

    <form action="/application" method="POST" class="application-form" novalidate>
        <label class="application-form__label" for="name">ФИО</label>
        <input id="name" name="name" type="text" class="application-form__input" required>

        <label class="application-form__label" for="age">Возраст</label>
        <input id="age" name="age" type="number" class="application-form__input" required>

        <label class="application-form__label" for="phone">Телефон</label>
        <input id="phone" name="phone" type="tel" class="application-form__input">

        <label class="application-form__label" for="email">Email</label>
        <input id="email" name="email" type="email" class="application-form__input">

        <button type="submit" class="cta__button application-form__submit">Отправить заявку</button>
    </form>

    <p class="application-page__back">
        <a href="/programs">← Назад к программам</a>
    </p>
</main>

<%- include(partials + '/footer') %>
