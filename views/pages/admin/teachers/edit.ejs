<%- include(partials + '/header') %>

<main class="form-block">
    <h1 class="form-block__title">Редактировать педагога</h1>

    <form action="/admin/teachers/edit/<%= teacher.id %>" method="POST">
        <div class="form-block__group">
            <label>Имя:*<br>
                <input type="text" name="name" value="<%= teacher.name %>" required>
            </label>
        </div>

        <div class="form-block__group">
            <label>Биография:<br>
                <textarea name="bio" rows="5"><%= teacher.bio %></textarea>
            </label>
        </div>

        <div class="form-block__group">
            <label>Ссылка на фотографию:<br>
                <input type="text" name="image_url" value="<%= teacher.image_url %>">
            </label>
        </div>

        <button type="submit" class="cta-button">Сохранить</button>
    </form>

    <p class="admin-back"><a href="/admin/teachers">← Назад</a></p>
</main>

<%- include(partials + '/footer') %>
