<%- include(partials + '/header') %>

<main class="admin-applications">
    <h1 class="admin-applications__title">Заявки поступления</h1>

    <% if (applications.length === 0) { %>
        <p class="admin-applications__empty">Заявок пока нет.</p>
    <% } else { %>
        <div class="admin-applications__table-container">
            <table class="admin-applications__table">
                <thead>
                <tr>
                    <th>Дата</th>
                    <th>ФИО</th>
                    <th>Возраст</th>
                    <th>Телефон</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <% applications.forEach(app => { %>
                    <tr>
                        <td><%= new Date(app.submitted_at).toLocaleString() %></td>
                        <td><%= app.name %></td>
                        <td><%= app.age %></td>
                        <td><%= app.phone || '—' %></td>
                        <td><%= app.email || '—' %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>

    <p class="admin-applications__back">
        <a href="/admin">← Назад в админку</a>
    </p>
</main>

<%- include(partials + '/footer') %>
