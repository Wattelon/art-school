<%- include(partials + '/header') %>

<main class="form-block">
    <h1 class="form-block__title">Редактировать контакт "<%= contact.title %>"</h1>

    <form action="/admin/contacts/edit/<%= contact.id %>" method="POST">
        <div class="form-block__group">
            <label>Название:*<br>
                <input type="text" name="title" value="<%= contact.title %>" required>
            </label>
        </div>

        <div class="form-block__group">
            <label>Телефон:<br>
                <input type="text" name="phone" value="<%= contact.phone %>">
            </label>
        </div>

        <div class="form-block__group">
            <label>Email:<br>
                <input type="email" name="email" value="<%= contact.email %>">
            </label>
        </div>

        <div class="form-block__group">
            <label>Соцсети:<br>
                <textarea name="social" rows="2"><%= contact.social %></textarea>
            </label>
        </div>

        <div class="form-block__group">
            <label>Адрес:<br>
                <textarea name="address" rows="2"><%= contact.address %></textarea>
            </label>
        </div>

        <button type="submit" class="cta-button">Сохранить</button>
    </form>

    <p class="admin-back"><a href="/admin/contacts">← Назад</a></p>
</main>

<%- include(partials + '/footer') %>
