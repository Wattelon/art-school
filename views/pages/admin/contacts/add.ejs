<%- include(partials + '/header') %>

<main class="form-block">
    <h1 class="form-block__title">Добавить контакт</h1>

    <form action="/admin/contacts/add" method="POST">
        <div class="form-block__group">
            <label>Название:*<br>
                <input type="text" name="title" required>
            </label>
        </div>

        <div class="form-block__group">
            <label>Телефон:<br>
                <input type="text" name="phone">
            </label>
        </div>

        <div class="form-block__group">
            <label>Email:<br>
                <input type="email" name="email">
            </label>
        </div>

        <div class="form-block__group">
            <label>Соцсети:<br>
                <textarea name="social" rows="2"></textarea>
            </label>
        </div>

        <div class="form-block__group">
            <label>Адрес:<br>
                <textarea name="address" rows="2"></textarea>
            </label>
        </div>

        <button type="submit" class="cta-button">Сохранить</button>
    </form>

    <p class="admin-back"><a href="/admin/contacts">← Назад</a></p>
</main>

<%- include(partials + '/footer') %>
