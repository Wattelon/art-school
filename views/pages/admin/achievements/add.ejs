<%- include(partials + '/header') %>

<main class="form-block">
    <h1 class="form-block__title">Добавить достижение</h1>

    <form action="/admin/achievements/add" method="POST">
        <div class="form-block__group">
            <label>Заголовок:*<br>
                <input type="text" name="title" required>
            </label>
        </div>

        <div class="form-block__group">
            <label>Описание:<br>
                <textarea name="description" rows="5"></textarea>
            </label>
        </div>

        <div class="form-block__group">
            <label>Дата:<br>
                <input type="date" name="date">
            </label>
        </div>

        <button type="submit" class="cta-button">Сохранить</button>
    </form>

    <p class="admin-back"><a href="/admin/achievements">← Назад</a></p>
</main>

<%- include(partials + '/footer') %>
