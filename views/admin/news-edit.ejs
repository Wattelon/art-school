<%- include('../partials/header') %>
<h1>Редактировать новость</h1>
<form action="/admin/news/edit/<%= news.id %>" method="POST">
    <input type="text" name="title" value="<%= news.title %>" required><br>
    <textarea name="content" required><%= news.content %></textarea><br>
    <input type="text" name="image_url" value="<%= news.image_url %>" required><br>
    <button type="submit">Сохранить</button>
</form>
<a href="/admin/news">Назад в админку</a>
